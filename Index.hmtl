        <!-- Tester Tab -->
        <div id="tester" class="tab-content">
            <h2>SMTP Server Tester</h2>
            <p>Enter your SMTP server details to test connection and authentication.</p>
            
            <div class="ad-container">
                <!-- Leaderboard Ad -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-YOUR_ADSENSE_ID"
                     data-ad-slot="YOUR_LEADERBOARD_SLOT"
                     data-ad-format="auto"
                     data-full-width-responsive="true"></ins>
                <script>
                     (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
            
            <form id="smtpTestForm" class="tester-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="smtp-server">SMTP Server:</label>
                        <input type="text" id="smtp-server" placeholder="smtp.yourdomain.com" required>
                    </div>
                    <div class="form-group">
                        <label for="port">Port:</label>
                        <input type="number" id="port" placeholder="587" value="587" required>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="encryption">Encryption:</label>
                    <select id="encryption" required>
                        <option value="tls">TLS (Recommended)</option>
                        <option value="ssl">SSL</option>
                        <option value="none">None</option>
                    </select>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="text" id="username" placeholder="your@email.com" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" id="password" placeholder="yourpassword" required>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="auth-method">Authentication Method:</label>
                    <select id="auth-method">
                        <option value="auto">Auto-detect</option>
                        <option value="plain">PLAIN</option>
                        <option value="login">LOGIN</option>
                        <option value="cram-md5">CRAM-MD5</option>
                    </select>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="from-email">From Email:</label>
                        <input type="email" id="from-email" placeholder="from@yourdomain.com" required>
                    </div>
                    <div class="form-group">
                        <label for="to-email">To Email:</label>
                        <input type="email" id="to-email" placeholder="to@example.com" required>
                    </div>
                </div>
                
                <button type="submit" class="test-button">Test SMTP Connection</button>
            </form>
            
            <div id="results" class="results">
                <h3>Test Results</h3>
                <div id="result-content"></div>
                <div id="error-details" class="error-details" style="display: none;">
                    <h4>Error Details</h4>
                    <pre id="error-message"></pre>
                </div>
